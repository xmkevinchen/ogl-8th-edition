#version 330 core

layout (location = 0) in vec2 in_poisition;
layout (location = 1) in vec2 in_tex_coord;

out vec2 tex_coord_0;
out vec2 tex_coord_1;

uniform mat2 matrix;

void main(void) {
//    const mat2 m = mat2( vec2( cos(time), sin(time)),
//                         vec2(-sin(time), cos(time)) );
    
    gl_Position = vec4(in_poisition, 0.5, 1.0);
    tex_coord_0 = in_tex_coord * matrix;
    tex_coord_1 = in_tex_coord * transpose(matrix);
}
